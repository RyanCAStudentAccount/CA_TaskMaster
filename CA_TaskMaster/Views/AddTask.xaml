<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CA_TaskMaster.Views.AddTask"
             xmlns:viewmodels="clr-namespace:CA_TaskMaster.ViewModels;assembly=CA_TaskMaster">

    <ContentPage.BindingContext>
        <viewmodels:AddTaskViewModel />
    </ContentPage.BindingContext>
    <StackLayout>
        <StackLayout Orientation="Horizontal" Padding="5">
            <Label Text="Name" FontAttributes="Bold" WidthRequest="100" />
            <Label Text="View" FontAttributes="Bold" WidthRequest="100" />
            <Label Text="Edit" FontAttributes="Bold" WidthRequest="100" />
            <Label Text="Delete" FontAttributes="Bold" WidthRequest="100" />
        </StackLayout>
        <ListView ItemsSource="{Binding Tasks}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding TaskName}" Grid.Column="0" />
                            <Button Text="View" Grid.Column="1" Command="{Binding Path=BindingContext.ViewTaskCommand, Source={x:Reference Name=AddTaskPage}}" CommandParameter="{Binding}" />
                            <Button Text="Edit" Grid.Column="2" Command="{Binding Path=BindingContext.EditTaskCommand, Source={x:Reference Name=AddTaskPage}}" CommandParameter="{Binding}" />
                            <Button Text="Delete" Grid.Column="3" Command="{Binding Path=BindingContext.DeleteTaskCommand, Source={x:Reference Name=AddTaskPage}}" CommandParameter="{Binding}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Task" Command="{Binding AddTaskCommand}" />
    </StackLayout>
</ContentPage>