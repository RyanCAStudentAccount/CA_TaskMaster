<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CA_TaskMaster.Views.LoginPage"
             Title="Login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="20">
            <Label Text="Username" />
            <Entry x:Name="UsernameEntry" Placeholder="Enter your username" />
            <Label Text="Password" />
            <Entry x:Name="PasswordEntry" Placeholder="Enter your password" IsPassword="True" />
            <Button Text="Login" Clicked="OnLoginClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
