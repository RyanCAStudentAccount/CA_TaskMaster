<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CA_TaskMaster.Views.ViewTaskPage">

    <StackLayout Margin="20">
        <Label Text="{Binding TaskName}" FontSize="24" FontAttributes="Bold" />
        <Label Text="{Binding TaskDescription}" FontSize="16" />
        <Label Text="Due Date:" FontSize="16" FontAttributes="Bold" />
        <Label Text="{Binding TaskDueDate, StringFormat='{0:MM/dd/yyyy}'}" FontSize="16" />
        <Label Text="Priority:" FontSize="16" FontAttributes="Bold" />
        <Label Text="{Binding TaskPriority}" FontSize="16" />
    </StackLayout>

</ContentPage>
