<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CA_TaskMaster.MainPage">

    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <Label 
                Text="Task Master"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <Label 
                Text="Your Tasks"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Start" />

            <ListView
                x:Name="TaskList"
                HeightRequest="300"
                RowHeight="50">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding TaskName}" Detail="{Binding TaskDetail}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button 
                x:Name="AddTaskBtn"
                Text="Add Task"
                Clicked="OnAddTaskClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>