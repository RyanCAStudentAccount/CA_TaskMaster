<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CA_TaskMaster.MainPage"
             Background="Black"
             BackgroundColor="LightGray">

    <ScrollView>
        <StackLayout 
            Spacing="20" 
            Padding="20"
            VerticalOptions="CenterAndExpand">

            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

                <Label Text="TaskMaster" 
                               TextColor="White" 
                               FontAttributes="Bold"
                               FontSize="30"
                       HorizontalOptions="Center"
                       FontFamily="TimesNewRoman"/>

                <Label Text="The Task Management Solution" 
                               TextColor="White" 
                               FontAttributes="Italic"
                               FontSize="14"
                       FontFamily="TimesNewRoman"/>
                
                <Image Aspect="AspectFill" Source="tasklogo.jpg"
                                           WidthRequest="50" HeightRequest="50" Margin="5"/>


            </VerticalStackLayout>
            

            <Frame
                CornerRadius="10"
                Padding="10"
                BackgroundColor="White"
                HorizontalOptions="FillAndExpand">
                <StackLayout>

                    <Button 
                        x:Name="AddTaskBtn"
                        Text="Create New Task"
                        Clicked="OnViewTaskClicked"
                        BackgroundColor="#ff7043"
                        TextColor="#fff"
                        CornerRadius="5"
                        Padding="10"
                        Margin="10"
                        FontSize="18">
                    </Button>

                    <Button 
                        x:Name="ViewTasksBtn"
                        Text="Active Tasks"
                        Clicked="OnViewTaskClicked"
                        BackgroundColor="#ff7043"
                        TextColor="#fff"
                        CornerRadius="5"
                        Padding="10"
                        Margin="10"
                        FontSize="18">
                    </Button>

                    <Button 
                        x:Name="CompletedBtn"
                        Text="Completed Tasks"
                        Clicked="OnCompletedTasksClicked"
                        BackgroundColor="#ff7043"
                        TextColor="#fff"
                        CornerRadius="5"
                        Padding="10"
                        Margin="10"
                        FontSize="18">
                    </Button>

                    <Button 
                        x:Name="MotivationBtn"
                        Text="Daily Motivation"
                        Clicked="OnMotBtnClicked"
                        BackgroundColor="#ff7043"
                        TextColor="#fff"
                        CornerRadius="5"
                        Padding="10"
                        Margin="10"
                        FontSize="18">
                    </Button>

                    <Button 
                        x:Name="AboutBtn"
                        Text="About"
                        Clicked="OnAboutBtnClicked"
                        BackgroundColor="#ff7043"
                        TextColor="#fff"
                        CornerRadius="5"
                        Padding="10"
                        Margin="10"
                        FontSize="18">
                    </Button>

                    <Button 
                        x:Name="SignOutBtn"
                        Text="Sign Out"
                        Clicked="OnLogOutClicked"
                        BackgroundColor="#ff7043"
                        TextColor="#fff"
                        CornerRadius="5"
                        Padding="10"
                        Margin="10"
                        FontSize="18">
                    </Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>
