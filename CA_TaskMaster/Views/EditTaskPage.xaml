<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CA_TaskMaster.Views.EditTaskPage"
             x:Name="EditTaskPageInstance"
             xmlns:viewmodels="clr-namespace:CA_TaskMaster.ViewModels;assembly=CA_TaskMaster">

    <StackLayout Margin="20">
        <Label Text="Task Name:" FontSize="16" FontAttributes="Bold" />
        <Label Text="{Binding TaskName}" FontSize="16" />
        <Label Text="Task Description:" FontSize="16" FontAttributes="Bold" />
        <Editor Text="{Binding TaskDescription, Mode=TwoWay}" />
        <Label Text="Due Date:" FontSize="16" FontAttributes="Bold" />
        <DatePicker Date="{Binding TaskDueDate, Mode=TwoWay}" />
        <Label Text="Priority:" FontSize="16" FontAttributes="Bold" />
        <Picker Title="Select Priority" SelectedItem="{Binding TaskPriority, Mode=TwoWay}">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Low</x:String>
                    <x:String>Medium</x:String>
                    <x:String>High</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Button Text="Update Task" Clicked="OnUpdateClicked" />
    </StackLayout>

</ContentPage>